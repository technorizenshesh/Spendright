<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:id="@+id/progressBar"
            android:background="@drawable/progresh_background"
            android:elevation="6dp"
            android:padding="5dp"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/purple_200"
            android:visibility="gone"
            />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/RRtoolbaar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp">

                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/back">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Wallet Funding Details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:listitem="@layout/item_fund" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llOne"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account_number"
                            android:fontFamily="@font/poppinsregular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/blue_rounded_border"
                            android:padding="@dimen/_5sdp"
                            >

                            <TextView
                                android:id="@+id/tvAccountNo1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsregular"
                                android:text="5446746788"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/ivCopy1"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/ic_cop"
                                android:layout_marginLeft="@dimen/_5sdp"
                                app:tint="@color/white" />

                        </LinearLayout>



                        <TextView
                            android:id="@+id/tvbankName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wema Bank"
                            android:fontFamily="@font/poppinsregular"
                            android:textColor="@color/black"
                            android:alpha="0.8"
                            android:textSize="@dimen/_11sdp"/>






                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/llTwo"
                        android:visibility="gone"
                        android:layout_below="@+id/llOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account_number"
                            android:fontFamily="@font/poppinsregular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/blue_rounded_border"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/tvAccountNo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5446746788"
                                android:fontFamily="@font/poppinsregular"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="@dimen/_13sdp"/>

                            <ImageView
                                android:id="@+id/ivCopy2"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/ic_cop"
                                android:layout_marginLeft="@dimen/_5sdp"
                                app:tint="@color/white" />

                        </LinearLayout>



                        <TextView
                            android:id="@+id/tvbankName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wema Bank"
                            android:fontFamily="@font/poppinsregular"
                            android:textColor="@color/black"
                            android:alpha="0.8"
                            android:textSize="@dimen/_11sdp"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/RRGenerateAcct"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_margin="@dimen/_20sdp"
                        android:background="@drawable/blue_rounded_border"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20sp"
                            android:fontFamily="@font/poppinsregular"
                            android:text="@string/generate_account"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:src="@drawable/right_back" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/RRUpdateMonnnifyOne"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentStart="true"
                        android:layout_margin="@dimen/_20sdp"
                        android:background="@drawable/blue_rounded_border"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20sp"
                            android:fontFamily="@font/poppinsregular"
                            android:text="@string/update_account"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:src="@drawable/right_back"
                            android:visibility="gone"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/RRUpdateMonnnifyTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/RRUpdateMonnnifyOne"
                        android:layout_margin="@dimen/_20sdp"
                        android:background="@drawable/blue_rounded_border"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20sp"
                            android:fontFamily="@font/poppinsregular"
                            android:text="@string/update_account"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:src="@drawable/right_back"
                            android:visibility="gone"/>

                    </RelativeLayout>



                     <LinearLayout
                        android:id="@+id/ll21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            >

                            <TextView
                                android:id="@+id/tvPercent1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1%"
                                android:fontFamily="@font/poppinsregular"
                                android:textColor="@color/black"
                                android:textStyle="bold|italic"
                                android:textSize="@dimen/_11sdp"
                                android:visibility="gone"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/poppinsregular"
                                android:text="1% charge +VAT\n(Main Funding Accounts)"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textStyle="italic"
                                android:textSize="@dimen/_11sdp" />


                        </LinearLayout>




                </RelativeLayout>


                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:visibility="gone"
                    />

                <RelativeLayout
                    android:id="@+id/rlFlutterWave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/llThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account_number"
                            android:fontFamily="@font/poppinsregular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/blue_rounded_border"
                            android:padding="@dimen/_5sdp"
                            >

                            <TextView
                                android:id="@+id/tvAccountNo3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5446746788"
                                android:fontFamily="@font/poppinsregular"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="@dimen/_13sdp"/>

                            <ImageView
                                android:id="@+id/ivCopy3"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/ic_cop"
                                android:layout_marginLeft="@dimen/_5sdp"
                                app:tint="@color/white" />

                        </LinearLayout>



                        <TextView
                            android:id="@+id/tvbankName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wema Bank"
                            android:fontFamily="@font/poppinsregular"
                            android:textColor="@color/black"
                            android:alpha="0.8"
                            android:textSize="@dimen/_11sdp"/>


                        <TextView
                            android:id="@+id/tvKyc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kyc"
                            android:fontFamily="@font/poppinsregular"
                            android:textColor="@color/blue"
                            android:layout_marginTop="-3dp"
                            android:padding="@dimen/_2sdp"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="gone"/>

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/ll41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        >

                        <TextView
                            android:id="@+id/tvPercent2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.4%"
                            android:fontFamily="@font/poppinsregular"
                            android:textColor="@color/black"
                            android:textStyle="bold|italic"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="gone"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:fontFamily="@font/poppinsregular"
                            android:text="1.4% Charge\n(Backup Funding Account)"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:textStyle="italic"
                            android:textSize="@dimen/_11sdp" />


                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/RRKYC"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_margin="@dimen/_20sdp"
                        android:background="@drawable/blue_rounded_border"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20sp"
                            android:fontFamily="@font/poppinsregular"
                            android:text="@string/perform_kyc"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:src="@drawable/right_back" />

                    </RelativeLayout>



                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center_vertical"
                    android:text="@string/reserved_bank_account"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make a transfer to any of the above account numbers to automatically fund your wallet."
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/black"
                    android:alpha="0.8"
                    android:layout_marginTop="-2sp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_11sdp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center_vertical"
                    android:text="@string/atm_card_ussd"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To use ATM card or USSD, enter the amount in the space below and click the button, to fund your wallet."
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/black"
                    android:alpha="0.8"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_11sdp"/>






                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/enter_amount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_euro"/>



                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/doller"
                        android:layout_marginLeft="@dimen/_10sdp" />

                    <EditText
                        android:id="@+id/edAmount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@null"
                        android:hint="Enter Amount"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:maxLength="12"
                        android:textColorHint="#5B16110D"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/black"/>



                <RelativeLayout
                    android:id="@+id/RRPay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/blue_rounded_border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20sp"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Fund with Card or USSD"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/right_back" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>
