                        android:textSize="@dimen/_13sdp"/>



                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1">


                    <ImageView
                        android:layout_width="@dimen/_20sdp"
