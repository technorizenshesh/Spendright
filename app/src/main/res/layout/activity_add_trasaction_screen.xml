<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/RRtoolbaar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                >

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    >

                </ImageView>

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:text="Add Transaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>


            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Add Amount"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <EditText
                android:layout_margin="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:elevation="@dimen/_10sdp"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="0.00"
                android:background="@drawable/border_white_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                >
            </EditText>

            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Add Payee"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <EditText
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:elevation="@dimen/_10sdp"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="Select Category"
                android:background="@drawable/border_white_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                >
            </EditText>


            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Account"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:gravity="center_vertical"
                android:drawableRight="@drawable/bottom_arrow"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:elevation="@dimen/_10sdp"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="Select Category"
                android:background="@drawable/border_white_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                >
            </TextView>

            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Date"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:gravity="center_vertical"
                android:drawableRight="@drawable/caleder"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:elevation="@dimen/_10sdp"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="Select Date"
                android:background="@drawable/border_white_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                >
            </TextView>


            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Repeat"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:gravity="center_vertical"
                android:drawableRight="@drawable/bottom_arrow"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:elevation="@dimen/_10sdp"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="Select Mode"
                android:background="@drawable/border_white_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                >
            </TextView>

            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Flag"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:gravity="center_vertical"
                android:drawableRight="@drawable/bottom_arrow"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:elevation="@dimen/_10sdp"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="Assign Flag"
                android:background="@drawable/border_white_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                >

            </TextView>






            <RelativeLayout
                android:layout_marginBottom="@dimen/_20sdp"
                android:id="@+id/RRlogin"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/border_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                >

                <TextView
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/white"
                    android:text="Save Transaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</layout>
