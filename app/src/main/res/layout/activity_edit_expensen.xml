                    android:layout_height="wrap_content"
                    >

                    <TextView
                    
                        android:text="Groceries"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
