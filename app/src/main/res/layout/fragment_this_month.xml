<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:id="@+id/RRtoolbaar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    >

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/imgBack"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/left_arraow"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        >

                    </ImageView>

                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:text="Cards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <RelativeLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/border_white"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_160sdp"
                        >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:textStyle="bold"
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_16sdp"
                                android:textColor="@color/black"
                                android:text="Budget Accounts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                            <TextView
                                android:text="Savings,Cash,Prepaid Cards,etc."
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                         <ImageView
                             android:src="@drawable/more_button"
                             android:layout_width="@dimen/_30sdp"
                             android:layout_height="@dimen/_30sdp"
                             >
                         </ImageView>

                        </LinearLayout>


                        <ImageView
                            android:id="@+id/gr"
                            android:layout_centerVertical="true"
                            android:src="@drawable/gr"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            >
                        </ImageView>

                        <LinearLayout
                            android:layout_below="@+id/gr"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:textStyle="bold"
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_25sdp"
                                android:textColor="@color/black"
                                android:text="76.451,00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                            <TextView
                                android:layout_marginTop="-10dp"
                                android:text="Total Expenses"
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/gr"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:gravity="right"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/black"
                                android:text="Budget Set \n52.400"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />


                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <RelativeLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/border_white"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_160sdp"
                        >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:textStyle="bold"
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_16sdp"
                                android:textColor="@color/black"
                                android:text="Budget Accounts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                            <TextView
                                android:text="Savings,Cash,Prepaid Cards,etc."
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:src="@drawable/more_button"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                >
                            </ImageView>

                        </LinearLayout>


                        <ImageView
                            android:id="@+id/gr11"
                            android:layout_centerVertical="true"
                            android:src="@drawable/gr"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            >
                        </ImageView>

                        <LinearLayout
                            android:layout_below="@+id/gr11"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:textStyle="bold"
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_25sdp"
                                android:textColor="@color/orange"
                                android:text="00.00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                            <TextView
                                android:layout_marginTop="-10dp"
                                android:text="Current balance"
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/gr11"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:gravity="right"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/orange"
                                android:text="EM \n6,400"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />


                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <RelativeLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/border_white"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_160sdp"
                        >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:textStyle="bold"
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_16sdp"
                                android:textColor="@color/black"
                                android:text="Investment Accounts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                            <TextView
                                android:text="FD, Mutual Funds, Target Savings,etc."
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:src="@drawable/more_button"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                >
                            </ImageView>

                        </LinearLayout>


                        <ImageView
                            android:id="@+id/gr111"
                            android:layout_centerVertical="true"
                            android:src="@drawable/gr"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            >
                        </ImageView>

                        <LinearLayout
                            android:layout_below="@+id/gr111"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:layout_margin="0sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_25sdp"
                                android:textColor="@color/black"
                                android:text="716.451,00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                            <TextView
                                android:layout_marginTop="-10dp"
                                android:text="Current balance"
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/gr111"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:gravity="right"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/black"
                                android:text="Avg Yield (Pa)\n5%"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />


                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>
