<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_above="@+id/RRSignUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/RRtoolbaar"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                >

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="Login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>


            <ImageView
                android:layout_margin="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:id="@+id/cir"
                android:layout_below="@+id/RRtoolbaar"
                android:src="@drawable/third_cir"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                >
            </ImageView>

            <LinearLayout
                android:layout_below="@+id/cir"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <ImageView
                    android:id="@+id/imgLogo"
                    android:padding="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/loginsuccess"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_260sdp"
                    >
                </ImageView>

                <TextView
                    android:padding="@dimen/_20sdp"
                    android:gravity="center"
                    android:layout_below="@+id/imgLogo"
                    android:textStyle="bold"
                    android:textSize="@dimen/_24sdp"
                    android:textColor="@color/white"
                    android:text="Login done successfully!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:id="@+id/RRSignUp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/border_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            >

            <TextView
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/white"
                android:text="Start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/right_back"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                >
            </ImageView>

        </RelativeLayout>

    </RelativeLayout>

</layout>
