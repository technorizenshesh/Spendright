                            android:padding="@dimen/_5sdp"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:hint="Via Salaria 712"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
