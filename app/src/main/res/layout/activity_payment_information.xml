<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:padding="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:id="@+id/RRtoolbaar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    >

                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/back"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        >

                    </ImageView>

                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:text="Payment Information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/close"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        >

                    </ImageView>

                </RelativeLayout>



                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:text="Payment information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:text="Enter amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/mail"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        >

                    </ImageView>

                    <EditText
                        android:textSize="@dimen/_12sdp"
                        android:inputType="text"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColorHint="@color/black"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:hint="6.725,00"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    </EditText>

                </LinearLayout>

                <View
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    >

                </View>

                <TextView
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:text="Payment date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/mail"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        >

                    </ImageView>

                    <TextView
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColorHint="@color/black"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:hint="16/08/2020"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    </TextView>

                </LinearLayout>

                <View
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    >

                </View>

                <TextView
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:text="Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/mail"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        >

                    </ImageView>

                    <EditText
                        android:textSize="@dimen/_12sdp"
                        android:inputType="text"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColorHint="@color/black"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:hint="Broadband Bil"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    </EditText>

                </LinearLayout>

                <View
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    >
                </View>

                <TextView
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:text="Bill Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/mail"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        >

                    </ImageView>

                    <EditText
                        android:textSize="@dimen/_12sdp"
                        android:inputType="text"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColorHint="@color/black"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:hint="678577HFH"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    </EditText>

                </LinearLayout>

                <View
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    >
                </View>

                <TextView
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:text="From"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/mail"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        >

                    </ImageView>

                    <TextView
                        android:gravity="center_vertical"
                        android:drawableRight="@drawable/bottom_arrow"
                        android:inputType="text"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColorHint="@color/black"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:hint="Budget Account"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    </TextView>

                </LinearLayout>

                <View
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    >
                </View>

                <TextView
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:text="In"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/mail"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        >

                    </ImageView>

                    <TextView
                        android:gravity="center_vertical"
                        android:drawableRight="@drawable/bottom_arrow"
                        android:inputType="text"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColorHint="@color/black"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:hint="Cash Mode"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    </TextView>

                </LinearLayout>

                <View
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    >
                </View>

                <RelativeLayout
                    android:id="@+id/RRlogin"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/border_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    >

                    <TextView
                        android:layout_marginLeft="20sp"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/white"
                        android:text="Done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>
