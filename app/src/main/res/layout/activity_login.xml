<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        >

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:id="@+id/progressBar"
            android:background="@drawable/progresh_background"
            android:elevation="6dp"
            android:padding="5dp"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/purple_200"
            android:visibility="gone"
            />


        <com.facebook.login.widget.LoginButton
            android:visibility="gone"
            android:id="@+id/connectWithFbButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:text="  connect_with_facebook" />



        <androidx.core.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                   <RelativeLayout
                    android:id="@+id/RRtoolbaar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    >

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/imgBack"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/left_arraow"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        >

                    </ImageView>

                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:text="Login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/help_icon"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        >

                    </ImageView>

                </RelativeLayout>

                <ImageView
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/cir"
                    android:layout_below="@+id/RRtoolbaar"
                    android:src="@drawable/frst_cir"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    >

                </ImageView>

                <LinearLayout
                    android:layout_below="@+id/cir"
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/border_white"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="@color/black"
                        android:text="Please enter your mobile phone or email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:text="We'll use your mobile phone or e-mail to send you the activation code for this application."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />


                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="Email address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/mail"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            >

                        </ImageView>
                     <!--   android:text="test@gmail.com"-->

                        <EditText
                            android:text="test@gmail.com"
                            android:id="@+id/edtEmail"
                            android:inputType="text"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColorHint="@color/black"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:hint="Your email/ phone number"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                        </EditText>

                    </LinearLayout>

                    <View
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        >

                    </View>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:text="Password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/password"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            >

                        </ImageView>

                        <EditText
                            android:text="12345"
                            android:id="@+id/edtPassword"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColorHint="@color/black"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:hint="****************"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                        </EditText>

                    </LinearLayout>

                    <View
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        >

                    </View>

                    <TextView
                        android:id="@+id/txtForgot"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/blue"
                        android:text="Forgot Your Password?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <RelativeLayout
                        android:id="@+id/RRlogin"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/border_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        >

                        <TextView
                            android:layout_marginLeft="20sp"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textSize="@dimen/_16sdp"
                            android:textColor="@color/white"
                            android:text="Next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <ImageView
                            android:layout_marginRight="@dimen/_20sdp"
                            android:src="@drawable/right_back"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            >
                        </ImageView>


                    </RelativeLayout>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:text="Or Continue With"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        >

                        <RelativeLayout
android:id="@+id/RRFacebook"
                            android:elevation="@dimen/_3sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@drawable/border_white_one"
                            android:padding="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:id="@+id/imgFb"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:src="@drawable/fb"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                >

                            </ImageView>

                            <TextView
                                android:gravity="center"
                                android:layout_toRightOf="@+id/imgFb"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/black"
                                android:text="Facebook"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/RRGoogle"
                            android:elevation="@dimen/_3sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@drawable/border_white_one"
                            android:padding="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:id="@+id/imgGoogle"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/google"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                >
                            </ImageView>

                            <TextView
                                android:layout_toRightOf="@+id/imgGoogle"
                                android:textStyle="bold"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:text="Google"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/gray"
                            android:text="Donâ€™t have an account? "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:id="@+id/txtRegistration"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/blue"
                            android:text="SIGNUP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>




    </RelativeLayout>

</layout>
